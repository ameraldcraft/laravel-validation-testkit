{
    "name": "amerald/laravel-validation-testkit",
    "description": "Test form requests in no time",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Illia Balia",
            "email": "illia.balia@ameraldcraft.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "laravel/framework": "^12.0"
    },
    "require-dev": {
        "mockery/mockery": "*",
        "orchestra/testbench": "*",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Amerald\\LaravelValidationTestkit\\": "app/",
            "Amerald\\LaravelValidationTestkit\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
